<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlUebung"
        xmlns:UserControl1="clr-namespace:UserControl1;assembly=UserControl1" x:Class="UserControlUebung.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <DockPanel LastChildFill="True">



        <UserControl1:UserControl1 Height="300" Width="500"/>

        <UserControl1:UserControl1 Height="300" Width="500" VerticalAlignment="Top" HorizontalAlignment="Right" > 

            <UserControl1:UserControl1.RenderTransform>
                <RotateTransform Angle="45"></RotateTransform>
            </UserControl1:UserControl1.RenderTransform>
        </UserControl1:UserControl1>

    </DockPanel>

</Window>
